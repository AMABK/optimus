{
  "extends": [
    "../../tslint.json",
    "rxjs-tslint-rules"
  ],
  "rules": {
    "rxjs-no-subject-unsubscribe":{
    },
    "rxjs-no-exposed-subjects": {
      "options": [
        {
          "allowProtected": true
        }
      ],
      "severity": "error"
    },
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "rxjs-add": {
      "severity": "error"
    },
    "rxjs-no-unused-add": {
      "severity": "error"
    }
  }
}
